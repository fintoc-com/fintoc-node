{
  "name": "fintoc",
  "version": "1.0.0",
  "description": "The official Node client for the Fintoc API.",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/fintoc-com/fintoc-node",
  "license": "BSD-3-Clause",
  "author": "Daniel Leal <daniel@fintoc.com>",
  "maintainers": [
    "Daniel Leal <daniel@fintoc.com>"
  ],
  "keywords": [],
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "lint": "eslint src --ext .ts",
    "test": "nyc --silent ava",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "nyc --silent ava --watch --verbose",
    "cov": "run-p cov:*",
    "cov:text": "nyc report --reporter=text",
    "cov:cobertura": "nyc report --reporter=cobertura",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version:get": "node -p \"require('./package.json').version\"",
    "version": "standard-version"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@types/node": "^16.6.1",
    "axios": "^0.22.0"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/sinon": "^10.0.3",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "ava": "^3.12.1",
    "codecov": "^3.5.0",
    "cspell": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "gh-pages": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^6.0.1",
    "sinon": "^11.1.2",
    "standard-version": "^9.0.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.0",
    "typescript": "^4.0.2"
  },
  "files": [
    "build/main",
    "build/module",
    "!src/spec/**",
    "!**/*.spec.*",
    "!**/*.json",
    "LICENSE.md",
    "README.md"
  ]
}
